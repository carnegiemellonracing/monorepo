{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "static",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Static"
            }
        },
        {
            "name": "debugStrict",
            "displayName": "Debug (Warnings as Errors)",
            "description": "Debug build with all warnings treated as errors",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "DebugStrict"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "static",
            "description": "Build for Static Analysis",
            "configurePreset": "static"
        },
        {
            "name": "debugStrict",
            "displayName": "Debug Strict",
            "description": "Build Debug with warnings as errors",
            "configurePreset": "debugStrict"
        }
    ]
}